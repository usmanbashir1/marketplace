<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="weltpixel_options">	
	<field name="weltpixel_hide_title">
	    <argument name="data" xsi:type="array">
	        <item name="config" xsi:type="array">
	            <item name="sortOrder" xsi:type="number">1</item>
	            <item name="dataType" xsi:type="string">boolean</item>
	            <item name="formElement" xsi:type="string">checkbox</item>
	            <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
	            <item name="label" xsi:type="string" translate="true">Hide Page Title</item>
	            <item name="prefer" xsi:type="string">toggle</item>
	            <item name="valueMap" xsi:type="array">
	                <item name="true" xsi:type="string">1</item>
	                <item name="false" xsi:type="string">0</item>
	            </item>
	            <item name="default" xsi:type="number">0</item>
	        </item>
	    </argument>
	</field>
	<field name="weltpixel_hide_breadcrumbs">
	    <argument name="data" xsi:type="array">
	        <item name="config" xsi:type="array">
	            <item name="sortOrder" xsi:type="number">2</item>
	            <item name="dataType" xsi:type="string">boolean</item>
	            <item name="formElement" xsi:type="string">checkbox</item>
	            <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
	            <item name="label" xsi:type="string" translate="true">Hide Breadcrumbs</item>
	            <item name="prefer" xsi:type="string">toggle</item>
	            <item name="valueMap" xsi:type="array">
	                <item name="true" xsi:type="string">1</item>
	                <item name="false" xsi:type="string">0</item>
	            </item>
	            <item name="default" xsi:type="number">0</item>
	        </item>
	    </argument>
	</field>
    </fieldset>
</form>
