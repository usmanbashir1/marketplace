        <referenceContainer name="category.view.container">
            <block class="Magento\Catalog\Block\Category\View" name="category.show.more" after="category.description" template="WeltPixel_CategoryPage::category/description/show_more.phtml"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="welpixel.categorypage.hoverimages.js" template="WeltPixel_CategoryPage::catalog/hoverimagejs.phtml" />
        </referenceContainer>
    </body>
</page>